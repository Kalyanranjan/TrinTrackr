<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:map="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/driverMap"
              tools:context="pranav.kalyan.suhas.trintrackr.StudentMapActivity"
              android:name="com.google.android.gms.maps.SupportMapFragment"
              android:layout_weight="50"/>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingBottom="40px">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/driver_message_board"
            android:text="Messages or Alerts for the Driver!!"
            android:textAlignment="center"
            android:textSize="30sp"/>

    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <Button
            android:id="@+id/driver_start_shuttle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_shuttle"
            android:layout_weight="1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/driver_stop_shuttle"
            android:text="@string/cancel_shuttle"
            android:layout_weight="1"/>

    </LinearLayout>
</LinearLayout>